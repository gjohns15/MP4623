<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:id= "@+id/title"
        android:layout_height="wrap_content"
        android:text="Profile Settings"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#000000"
        android:paddingBottom="15dp"/>


    <!-- Email -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailView"
        android:text=" Email: "
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailCurrent"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/emailView"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailText"
        android:hint="New Email"
        android:textColor="#000000"
        android:textSize="25sp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/emailView"
        android:maxLines="1"
        android:singleLine="true" />

    <!-- First Name -->
    <TextView
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fnameView"
        android:text=" First Name: "
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/emailText"/>
    <TextView
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fnameCurrent"
        android:text="First Name"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/emailText"
        android:layout_toRightOf="@+id/fnameView"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fnameText"
        android:hint="New First Name"
        android:textColor="#000000"
        android:textSize="25sp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/fnameView"
        android:maxLines="1"
        android:singleLine="true"/>

    <!-- Last Name -->
    <TextView
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lnameView"
        android:text=" Last Name: "
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/fnameText"/>
    <TextView
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lnameCurrent"
        android:text="Last Name"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/fnameText"
        android:layout_toRightOf="@id/lnameView"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lnameText"
        android:hint="New Last Name"
        android:textColor="#000000"
        android:textSize="25sp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/lnameView"
        android:maxLines="1"
        android:singleLine="true"/>

    <!-- Phone Number -->
    <TextView
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numView"
        android:text=" Phone Number: "
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/lnameText"/>
    <TextView
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numCurrent"
        android:text=" Phone Number"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/lnameText"
        android:layout_toRightOf="@+id/numView"/>
    <EditText
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numText"
        android:hint="New Phone Number"
        android:textColor="#000000"
        android:textSize="25sp"
        android:paddingBottom="10dp"
        android:layout_below="@id/numView"
        android:maxLines="1"
        android:singleLine="true"/>

    <!-- Password -->
    <TextView
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passView"
        android:text=" Password "
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/numText"/>
    <EditText
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passText"
        android:hint="New Password"
        android:textColor="#000000"
        android:textSize="25sp"
        android:paddingBottom="10dp"
        android:layout_below="@id/passView"
        android:maxLines="1"
        android:singleLine="true"/>

    <!-- Current Password -->
    <TextView
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passCView"
        android:text=" Enter current password to save changes"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/passText"/>
    <EditText
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passCText"
        android:hint="Password"
        android:textColor="#000000"
        android:textSize="25sp"
        android:paddingBottom="10dp"
        android:layout_below="@id/passCView"
        android:maxLines="1"
        android:singleLine="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:layout_gravity="center"
        android:onClick="onSave"
        android:layout_below="@+id/passCText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
    </ScrollView>
